{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui", 
  "globalDependencies": [".env"],
  "globalEnv": [
    "TURBO_TOKEN",
    "TURBO_TEAM"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "@programmer/ui#build": {
      "outputs": ["dist/**"]
    },
    "@programmer/hooks#build": {
      "outputs": ["dist/**"]
    },
    "@programmer/shared#build": {
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
