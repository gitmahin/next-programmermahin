{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui", 
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "@programmer/ui#build": {
      "outputs": ["dist/**"]
    },
    "@programmer/hooks#build": {
      "outputs": ["dist/**"]
    },
    "@programmer/shared#build": {
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
      
    }
  }
}
