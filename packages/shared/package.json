    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rehype-pretty-code": "^0.14.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@programmer/eslint-config": "workspace:*",
    "@programmer/typescript-config": "workspace:*",
    "@types/node": "^22.14.0",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.24.0",
    "tailwind-config": "workspace:*",
    "typescript": "^5.8.2"
  }
